<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MovieDetailActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/relativeL"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageD"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/textNameD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_toRightOf="@id/imageD"
                />

            <TextView
                android:id="@+id/textReleaseD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Date: "
                android:padding="5dp"
                android:layout_toRightOf="@id/imageD"
                android:layout_below="@+id/textNameD"
                />

            <TextView
                android:id="@+id/textCategoryD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Category: "
                android:layout_toRightOf="@id/imageD"
                android:layout_below="@+id/textReleaseD"
                />

            <TextView
                android:id="@+id/textRatingD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Rating: "
                android:layout_toRightOf="@id/imageD"
                android:layout_below="@+id/textCategoryD"
                />

            <TextView
                android:id="@+id/textRuntimeD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runtime: "
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/imageD"
                android:layout_below="@+id/textRatingD"
                />

            <TextView
                android:id="@+id/textDirectedD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageD"
                android:text="Directed by: "
                android:layout_margin="9dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/relativeView"
        android:background="@color/cardview_light_background"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.009">

        <TextView
            android:id="@+id/actorsDet"
            android:text="Actors:"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/writersDet"
            android:text="Writers:"
            android:layout_below="@id/actorsDet"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/plotDet"
            android:layout_below="@id/writersDet"
            android:padding="5dp"
            android:text="Plot:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/boxOfficeDet"
            android:text="Box Office:"
            android:padding="5dp"
            android:layout_below="@id/plotDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>